  id: string;
  date: string;      // YYYY-MM-DD
  amount: number;    // + à¸£à¸²à¸¢à¸£à¸±à¸š, - à¸£à¸²à¸¢à¸ˆà¹ˆà¸²à¸¢
  category: string;
